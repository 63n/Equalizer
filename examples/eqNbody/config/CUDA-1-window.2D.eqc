# Simple config executing the rendering from the application thread
global
{
}

server
{
    config
    {
        appNode
        {
            pipe
            {
				device 0
                window
                {
                    name "CUDA_GL:0"
                    viewport [ 0.25 0.25 0.5 0.5 ]
                    
                    channel { name "channel1" }
                }
            }
        }
        compound
        { 
            channel "channel1"
            wall
            {
                bottom_left  [ -.32 -.20 -.75 ]
                bottom_right [  .32 -.20 -.75 ]
                top_left     [ -.32  .20 -.75 ]
            }
        }
    }    
}
