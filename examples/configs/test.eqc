# 'Hello, World!' config: one window rendering from the application process.
server
{
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ 10 200 1200 400 ]
                    channel 
                    {
                        viewport [ 0 0 400 400 ]
                        name "channel-left"
                    }
                    channel 
                    {
                        viewport [ 400 0 400 400 ]
                        name "channel-middle"
                    }
                    channel 
                    {
                        viewport [ 800 0 400 400 ]
                        name "channel-right"
                    }
                }
            }
        }
        compound
        {
            compound
            {
                channel "channel-left"
                projection
                {
                    origin      [ 0. 0. 0. ]
                    distance    3.
                    fov         [ 54. 47. ]
                    hpr         [ 50. 0. 0. ]
                }
            }
            compound
            {
                channel "channel-middle"
                projection
                {
                    origin      [ 0. 0. 0. ]
                    distance    3.
                    fov         [ 54. 47. ]
                    hpr         [ 0. 0. 0. ]
                }
            }
            compound
            {
                channel "channel-right"
                projection
                {
                    origin      [ 0. 0. 0. ]
                    distance    3.
                    fov         [ 54. 47. ]
                    hpr         [ -50. 0. 0. ]
                }
            }
        }
    }    
}
