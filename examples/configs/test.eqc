#Equalizer 1.1 ascii
global
{
    EQ_CONFIG_FATTR_FOCUS_DISTANCE      2.
    EQ_CONFIG_IATTR_FOCUS_MODE          relative_to_observer
#    EQ_WINDOW_IATTR_HINT_FULLSCREEN ON
}

server
{
    connection { hostname "127.0.0.1" }
    config
    {
        appNode
        {
            pipe
            {
                window
                {
#                    viewport [ 0 0 1600 1200 ]
                    channel 
                    {
                        viewport [ 500 0 600 1200 ]
                        name "channel-middle"
                    }
                }
            }
        }
        observer {}
        layout{ view { observer "" }}
        canvas
        {
            layout 0
            segment
            {
                channel "channel-middle"
                viewport [ 0.3333 0 .3334 1 ]
                wall
                {
                    bottom_left  [ -1 -1 -1 ]
                    bottom_right [  1 -1 -1 ]
                    top_left     [ -1  1 -1 ]
                }
            }
        }
    }    
}
