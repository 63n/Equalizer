#Equalizer 1.2 ascii

global
{
    EQ_WINDOW_IATTR_HINT_DECORATION OFF
}

server
{
    connection { hostname "node1" }
    config
    {
        node
        {
            connection { hostname "node1" }
            pipe { device 0 window { channel { name "channel1a" }}}
            pipe { device 1 window { channel { name "channel1b" }}}
        }
        node
        {
            connection { hostname "node2" }
            pipe { device 0 window { channel { name "channel2a" }}}
            pipe { device 1 window { channel { name "channel2b" }}}
        }

        observer{}
        layout{ view { observer 0 }}
        canvas
        {
            layout 0
            wall {}
            swapbarrier{}

            segment
            {
                channel "channel1a"
                viewport [ 0 0 .5 .5 ]
            }
            segment
            {
                channel "channel1b"
                viewport [ .5 0 .5 .5 ]
            }
            segment
            {
                channel "channel2a"
                viewport [ 0 .5 .5 .5 ]
            }
            segment
            {
                channel "channel2b"
                viewport [ .5 .5 .5 .5 ]
            }
        }
    }
}
