server
{
    config
    {
        appNode
        {
            pipe
            {
                viewport [ 0 0 1280 1024 ]
                window
                {
                    viewport [ .05 .3 .4 .3 ]
                    channel
                    {
                        name "channel1"
                    }
                }
            }
        }
        node
        {
            pipe
            {
                viewport [ 0 0 1280 1024 ]
                window
                {
                    viewport [ .55 .3 .4 .3 ]
                    channel
                    {
                        name "channel2"
                    }
                }
            }
        }
        compound
        {
            channel "channel1"
            name    "top"

            wall
            {
                bottom_left  [ -.32 -.2 -1 ]
                bottom_right [  .32 -.2 -1 ]
                top_left     [ -.32  .2 -1 ]
            }
            
            compound
            {
                name     "leaf-channel1"
                viewport [ 0 0 .5 1 ]
            }
            compound
            { 
                channel "channel2"
                name    "leaf-channel2"

                viewport [ .5 0 .5 1 ]
                outputframe { name "frame.channel2" }
            }
            inputframe { name "frame.channel2" }
        }
    }    
}
