#Equalizer 1.0 ascii

# 'Hello, World!' config: one window rendering from the application process.
server
{
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ 0.25 0.25 0.5 0.5 ]
                    
                    channel { name "channel" }
                }
            }
        }
        layout
        {
            view
            {
                wall
                {
                    bottom_left  [      -0.32       -0.2      -0.75 ]
                    bottom_right [       0.32       -0.2      -0.75 ]
                    top_left     [      -0.32        0.2      -0.75 ]
                }
                
            }
        }
        canvas
        {
            layout   0
            layout   OFF
            segment { channel  "channel" }
        }
        compound
        {
            channel  ( canvas 0 segment 0 layout   0 view 0 )
        }
    }    
}
