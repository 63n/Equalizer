#Equalizer 1.1 ascii

server
{
    connection { hostname "127.0.0.1" }
    config
    {
        appNode
        {
            pipe
            {
                #device 0 # Quadro1
                window
                {
                    viewport [ 100 100 400 300 ]
                    channel { name "channel1" }
                }
            }
            pipe
            {
                #device 1 # Quadro2
                window
                {
                    viewport [ 500 100 400 300 ]
                    channel { name "channel2" }
                }
            }
            pipe
            {
                #device 3 # Tesla
                window
                {
                    attributes{ hint_drawable FBO }
                    channel { name "buffer" }
                }
            }
        }

        layout { view { }}
        canvas
        {
            layout 0
            wall
            {
                bottom_left  [ -1.6 -.5 -1 ]
                bottom_right [  1.6 -.5 -1 ]
                top_left     [ -1.6  .5 -1 ]
            }
            segment
            { 
                channel "channel1"
                viewport [ 0 0 .5 1 ]
            }
            segment
            { 
                channel "channel2"
                viewport [ .5 0 .5 1 ]
            }
        }

        compound
        {
            compound
            {
                channel ( segment 0 view 0 )
                compound
                {
                    channel "buffer"
                    outputframe { name "left" }
                }
                inputframe { name "left" }
                swapbarrier{}
            }
            compound
            {
                channel ( segment 1 view 0 )
                compound
                {
                    channel "buffer"
                    outputframe { name "right" }
                }
                inputframe { name "right" }
                swapbarrier{}
            }
        }
    }    
}
