# stress-test config, currently for swap barrier debugging
server
{
    config
    {
#        latency 10
        node
        {
            pipe
            {
                window
                {
                    name "window1"
                    viewport [ .025 .025 .3 .3 ]
                    channel { name "channel1" }
                }
            }
        }
        node
        {
            connection
            {
#                command "echo -n %h %c"
            }
            pipe
            {
                window
                {
                    name "window2"
                    viewport [ .35 .025 .3 .3 ]
                    channel { name "channel2" }
                }
            }
        }
        compound
        { 
            compound
            { 
                channel "channel1"
                wall
                {
                    bottom_left  [ -2    0.6 -2 ]
                    bottom_right [ -0.8  0.6 -2 ]
                    top_left     [ -2    1.5 -2 ]
                }
                swapbarrier {}
            }
            compound
            { 
                channel "channel2"
                wall
                {
                    bottom_left  [ -0.6  0.6 -2 ]
                    bottom_right [  0.6  0.6 -2 ]
                    top_left     [ -0.6  1.5 -2 ]
                }
                swapbarrier {}
            }
        }
    }    
}
