global
{
    EQ_COMPOUND_IATTR_STEREO_MODE ANAGLYPH
}

server
{
    config
    {
        appNode
        {
            pipe
            {
                attributes { hint_thread OFF }
                window
                {
                    viewport [ 0.01 0.01 0.4 0.3 ]
                    #                    attributes { hint_stereo ON }
                    channel { name "dgchan" }
                }
            }
        }
        node
        {
            connection { hostname "localhost" }
            pipe
            {
                window
                {
                    #                    attributes { hint_stereo ON }
                    viewport [ 0.51 0.01 0.4 0.3 ]
                    channel { name "clichan" }
                }
            }
        }
        compound 
        {
            channel "dgchan"
            eye [ LEFT RIGHT ]
            wall
            {
                bottom_left  [ -.4 -.3 -1 ]
                bottom_right [  .4 -.3 -1 ]
                top_left     [ -.4  .3 -1 ]
            }
            compound {
                channel "clichan"
                outputframe {}
            }
            inputframe { name "frame.clichan" }
        }
    }    
}
