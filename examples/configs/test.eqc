# 2-window test config
server
{
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ 300 500 480 150 ]
                    channel{ name  "controlhost" }
                }
            }

            pipe
            {
                window
                {
                    viewport [ 100 100 480 300 ]
                    channel
                    {
                        name "channel1"
                    }
                }
                window
                {
                    viewport [ 580 100 480 300 ]
                    channel
                    {
                        name "channel2"
                    }
                }
            }
        }
        compound
        {
            compound
            { 
                wall
                {
                    bottom_left  [ -.64 -.2 -1 ]
                    bottom_right [  .64 -.2 -1 ]
                    top_left     [ -.64  .2 -1 ]
                }

                compound
                { 
                    channel "channel1"
                    viewport [ 0 0 .5 1 ]
                    outputframe { zoom [ .5 .5 ] }
                }
                compound
                { 
                    channel "channel2"
                    viewport [ .5 0 .5 1 ]
                    outputframe { zoom [ .5 .5 ] }
                }
                compound
                {
                    channel "controlhost"
                    task [ CLEAR ASSEMBLE ]
                    inputframe { name "frame.channel1" }
                    inputframe { name "frame.channel2" }
                }
            }
        }
    }    
}
