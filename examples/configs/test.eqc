#Equalizer 1.1 ascii
global
{
    EQ_CONFIG_FATTR_FOCUS_DISTANCE      2.
    EQ_CONFIG_IATTR_FOCUS_MODE          relative_to_origin
}

server
{
    connection { hostname "127.0.0.1" }
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ 0. 0.25 0.5 0.5 ]
                    
                    channel { name "channel" }
                }
                window
                {
                    viewport [ 0.5 0.25 0.5 0.5 ]
                    
                    channel { name "channel2" }
                }
            }
        }
        observer{}
        layout{ view { }}
        canvas
        {
            layout 0
            wall{}
            segment { wall{} channel "channel" }
            segment { 
                wall{
                    bottom_left  [ -1.6 -1 -2 ]
                    bottom_right [ 1.6 -1 -2 ]
                    top_left [ -1.6 1 -2 ]
                } channel "channel2" }
        }
    }    
}
