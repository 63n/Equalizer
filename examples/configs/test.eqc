# two pipe fullscreen config for passive stereo output onto a 2x2 meter wall
# Note: the root compound channel is chosen arbitrarily to define the frustum.

server
{
    config
    {
        node
        {
            pipe
            {
                window
                {
                    channel { viewport [] name "channel1-left" }
                    channel { viewport [] name "channel1-right" }
                }
            }
        }
        node
        {
            pipe
            {
                window
                {
                    channel { viewport [] name "channel2-left" }
                    channel { viewport [] name "channel2-right" }
                }
            }
        }
        compound 
        {
            compound 
            {
                wall
                {
                    bottom_left  [ -1 -1 -1 ]
                    bottom_right [  1 -1 -1 ]
                    top_left     [ -1  1 -1 ]
                }
                compound
                {
                    channel "channel1-left"
                    eye [ LEFT ]
                }
                compound
                {
                    channel "channel1-right"
                    eye [ RIGHT ]
                }
                swapbarrier{}
            }
            compound 
            {
                wall
                {
                    bottom_left  [  ]
                    bottom_right [  ]
                    top_left     [  ]
                }
                compound
                {
                    channel "channel2-left"
                    eye [ LEFT ]
                }
                compound
                {
                    channel "channel2-right"
                    eye [ RIGHT ]
                }
                swapbarrier{}
            }
        }
    }    
}
