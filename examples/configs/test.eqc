# single pipe, two-to-one sort-last demo configuration with a separate
# compositing channel
server
{
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ .55 .1 .4 .3 ]

                    channel { name "channel1" }
                }
            }
            pipe
            {
                window
                {
                    viewport [ .05 .1 .4 .3 ]

                    channel { name "channel2" }
                }
            }
            pipe
            {
                attributes { hint_thread OFF }
                window
                {
                    viewport [ .35 .45 .4 .3 ]
                    channel { name "channel3" }
                }
            }
        }
        compound
        {
            channel "channel3"
            task    [ CLEAR ASSEMBLE ] 

            wall
            {
                bottom_left  [ -.32 -.20 -.75 ]
                bottom_right [  .32 -.20 -.75 ]
                top_left     [ -.32  .20 -.75 ]
            }
            loadBalancer{ mode 2D damping 0.8 }

            compound
            {
                channel "channel1"
                viewport [ .5 0 .5 1 ]
                outputframe { }
            }
            compound
            { 
                channel "channel2"
                viewport [ 0 0 .5 1 ]
                outputframe { }
            }
            inputframe { name "frame.channel1" }
            inputframe { name "frame.channel2" }
        }
    }    
}
