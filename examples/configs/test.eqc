# 2-window sort-first config running on a single pipe.
# Note: uses two pipes mapping to the same card to achieve parallelism
server
{
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ 640 400 1280 800 ]
                    channel
                    {
                        name "channel1"
                    }
                }
            }
        }
        node
        {
            connection { hostname "10.42.42.2" }
            pipe
            {
                window
                {
                    viewport [ 640 400 1280 800 ]
                    channel
                    {
                        name "channel2"
                    }
                }
            }
        }
        compound
        {
            channel "channel1"

            wall
            {
                bottom_left  [ -.32 -.2 -1 ]
                bottom_right [  .32 -.2 -1 ]
                top_left     [ -.32  .2 -1 ]
            }
            
            compound
            { 
                channel "channel2"
                outputframe {}
            }
            inputframe { name "frame.channel2" }
        }
    }    
}
