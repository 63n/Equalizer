# 2-window DFRLoadBalancer config
server
{
    config
    {
  
        appNode
        {
            pipe
            {
                window
                {
                    name "render buffer"
                    # attributes { hint_drawable pbuffer }
                    viewport [ 500 100 1000 800 ]
                    channel
                    {
                        name "channel1"
                    }
                }
            }

            pipe
            {
                window
                {
                    name "Dynamic Frame Resize"
                    viewport [ 20 100 480 300 ]
                    channel
                    {
                        name "dest"
                    }
                }
            }
        }
        compound
        { 
            wall
            {
                bottom_left  [ -.32 -.2 -1 ]
                bottom_right [  .32 -.2 -1 ]
                top_left     [ -.32  .2 -1 ]
            }
            channel "dest"

            

            compound
            { 
                channel "channel1"
                DFR_equalizer
                { 
                     framerate 15.0
                     damping 0.5
                }
                outputframe { name "frame.DFR" }
            }

            inputframe { name "frame.DFR" }
        }
    }    
}
