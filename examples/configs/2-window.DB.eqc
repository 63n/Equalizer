server
{
    config
    {
        appNode
        {
            pipe
            {
                window
                {
                    viewport [ .05 .3 .4 .3 ]
                    channel
                    {
                        name "channel1"
                    }
                }
                window
                {
                    viewport [ .55 .3 .4 .3 ]
                    attributes{ planes{ stencil on }}

                    channel
                    {
                        name "channel2"
                    }
                }
            }
        }
        compound
        {
            channel "channel2"
            buffer  [ COLOR DEPTH ]

            wall
            {
                bottom_left  [ -.32 -.2 -1 ]
                bottom_right [  .32 -.2 -1 ]
                top_left     [ -.32  .2 -1 ]
            }
            
            compound
            {
                range   [ 0 .5 ]
            }
            compound
            { 
                channel "channel1"
                range   [ .5 1 ]
                outputframe {}
            }
            inputframe { name "frame.channel1" }
        }
    }    
}
